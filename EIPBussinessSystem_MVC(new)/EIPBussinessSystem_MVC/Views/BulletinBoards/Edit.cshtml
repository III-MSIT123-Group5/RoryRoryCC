@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>公佈欄貼文</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Num)
    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextAreaFor(model => model.Content, new { rows = "10", cols = "150", @class = "form-control", @MaxLength = "10000" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>


        @*<div style="margin-bottom:120px">

            </div>*@
        <div style="margin-bottom:70px">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-success" type="submit" style="color:white"><i class="glyphicon glyphicon-floppy-save"> 儲存</i></button>|
                @Html.ActionLink("回到公佈欄", "Index")
            </div>
        </div>
        @*<div style="margin-bottom:0px">
                @Html.ActionLink("回到公佈欄", "Index")
            </div>*@

        <div style="margin-bottom:70px">

            @Html.LabelFor(model => model.EmployeeID, "EmployeeID", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeID", null, htmlAttributes: new { @class = "form-control", @style = "display:none" })
                @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger", @style = "display:none" })
            </div>
        </div>

        <div style="margin-bottom:120px">
            @Html.LabelFor(model => model.DepartmentID, "DepartmentID", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
            <div class="col-md-10">
                @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control", @style = "display:none" })
                @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger", @style = "display:none" })
            </div>
        </div>

        <div style="margin-bottom:170px">
            @Html.LabelFor(model => model.GroupID, "GroupID", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
            <div class="col-md-10">
                @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control", @style = "display:none" })
                @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger", @style = "display:none" })
            </div>
        </div>



        <div style="margin-bottom:270px">
            @Html.LabelFor(model => model.PostTime, htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostTime, new { htmlAttributes = new { @class = "form-control", @style = "display:none" } })
                @Html.ValidationMessageFor(model => model.PostTime, "", new { @class = "text-danger", @style = "display:none" })
            </div>
        </div>


    </div>
</div>
    }


