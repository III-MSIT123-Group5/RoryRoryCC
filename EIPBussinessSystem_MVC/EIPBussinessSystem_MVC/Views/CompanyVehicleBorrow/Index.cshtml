@model IEnumerable<EIPBussinessSystem_MVC.Models.CompanyVehicleHistory>
@section styles
    {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#時段').change(function () {
                alert($('#時段').val());
            });
        })
    </script>


}


@{
    ViewBag.Title = "公務車租借";
}
<p>
    @Html.ActionLink("搜尋", "Search")
</p>
<div class="form-group row">
    <label class="col-sm-1 control-label ">時段 : </label>
    @Html.DropDownList("TimeSlotlist",(IEnumerable<SelectListItem>)ViewBag.SelectList , new { @class = "col-sm-11 form-control" })
</div>
<div id="TimeSlot"></div>
<table class="table"></table>
<br />
<br />
<br />
<br />
<br />
<br />
<h2>借車紀錄</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purpose)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyVehicle.brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.EmployeeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyVehicle.brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VehicleHistoryID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VehicleHistoryID }) |
            </td>
        </tr>
    }

</table>
@section scripts
{
    <script>
        $("#TimeSlotlist").bind("change", function () {
            TimeSlotFunction();
        })
    function TimeSlotFunction() {
            $.ajax({
                type: "GET",
                url: "@Url.Action("TimeSlot", "CompanyVehicleBorrow")/" + TimeSlotlist.value,
            }).done(function (result) {
                $("#Orders").html(result);
            }).fail(function (e) {
                alert(e.responseText);
            });
        }
    </script>

}
