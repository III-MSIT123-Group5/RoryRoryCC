@model IEnumerable<EIPBussinessSystem_MVC.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "OrderDetails")'" type="button"><i class="glyphicon glyphicon-plus">   新增</i></button>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="margin:auto">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionMain.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionMain.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionMain.RequisitionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RequisitionMain.EmployeeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequisitionMain.OrderID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequisitionMain.RequisitionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>            
            <div style="margin:5px">
                @Html.ActionLink("編輯", "Edit", new { id = item.OrderDetailID }, new { @class = "btn btn-primary" })
            </div>
            <div style="margin:5px">
                @Html.ActionLink("內容", "Details", new { id = item.OrderDetailID }, new { @class = "btn btn-warning" })
            </div>
            <div style="margin:5px">
                @Html.ActionLink("刪除", "Delete", new { id = item.OrderDetailID }, new { @class = "btn btn-danger" })
            </div>
        </td>
    </tr>
}

</table>
