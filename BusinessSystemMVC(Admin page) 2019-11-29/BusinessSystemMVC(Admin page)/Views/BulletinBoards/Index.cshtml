@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.BulletinBoard>

@{
    ViewBag.Title = "Index";
}

<style>
    button, h2 {
        font-family: 'NotoSansCJKtc-Bold';
    }

    th {
        font-family: 'NotoSansCJKtc-Bold';
    }

    td {
        font-family: '微軟正黑體';
        font-weight: 600;
    }
</style>

<br />

<h2>公佈欄</h2>


@*<button onclick="location.href='/BulletinBoards/Create'" type="button" class="btn btn-success"><i class="fa fa-comment" aria-hidden="true"></i> 新增貼文</button>*@

<br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('/BulletinBoards/AddOrEdit')"><i class="fa fa-plus" aria-hidden="true"></i> 新增貼文</button>
<br /><br />
<div style="width:97%">
    <table id="Btable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>圖片</th>
                <th>姓名</th>
                <th>部門</th>
                <th>留言內容</th>
                <th>張貼時間</th>
                <th>編輯/刪除</th>
            </tr>
        </thead>
    </table>
</div>

<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#Btable').DataTable({
                "ajax": {
                    url: '/BulletinBoards/LoadData',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    {
                        "targets": 0, "data": "Photo", "render": function (url, type, full) {
                            return '<img height="60px" width="60px" style="border-radius:50%" src="' + `@Url.Content("~/imgProfiles/${url}")` + '"/>';
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "65px",
                        "className": "text-center align-middle"
                    },
                    { "targets": 1, "data": "EmployeeName", "width": "60px", "className": "text-center align-middle" },
                    { "targets": 2, "data": "name", "width": "60px", "className": "text-center align-middle"},
                    { "targets": 3, "data": "Content", "className": "align-middle" },
                    { "targets": 4, "data": "PostTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "150px", "className": "text-center align-middle"},
                    {
                        "targets": 5, "data": "Num", "render": function (data) {
                                    return "<a class='btn btn-warning btn-sm' onclick=PopupForm('/BulletinBoards/AddOrEdit/" + data + "')><i class='fa fa-pencil'></i> 編輯</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> 刪除</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px",
                        "className": "text-center align-middle"
                    }

                ],
                "language": {

                    "emptyTable": "目前無貼文，請點選<b>新增貼文</b>",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }

            });

        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '撰寫公佈欄貼文',
                        height: 400,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;

        }

        function Delete(id) {
            if (confirm('確定要刪除此筆貼文嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/BulletinBoards/Delete/' + id,
                    success: function (data) {
                        if (data.success) {

                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }
    </script>


}


