@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.EmployeeApprovalTemp>

@{
    ViewBag.Title = "新進人員註冊簽核";
}

@section Styles{
    <style>
        button {
            font-family: 'NotoSansCJKtc-Bold';
        }

        h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }
    </style>

    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}


<h2>@ViewBag.Title</h2>

<br /><br />
<div style="width:92%">
    <table id="NewEmpStable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>員工姓名</th>
                <th>性別</th>
                <th>帳號</th>
                <th>部門</th>
                <th>組別</th>
                <th>職稱</th>
                <th>新增時間</th>
                <th>詳細資料/核准/駁回</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#NewEmpStable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadData", "EmployeeApprovalTemps")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [

                    { "targets": 0, "data": "EmployeeName", "width": "60px" },
                    { "targets": 1, "data": "Gender", "width": "60px" },
                    { "targets": 2, "data": "Account", "width": "60px" },
                    { "targets": 3, "data": "name", "width": "60px"  },    /*department*/
                    { "targets": 4, "data": "GroupName", "width": "60px" },
                    { "targets": 5, "data": "position1", "width": "60px"  },
                    { "targets": 6, "data": "EditorTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px" },
                    {
                        "targets": 7, "data": "ID", "render": function (data) {
                            return `<a class='btn btn-warning btn-sm' onclick=PopupForm("@Url.Action("LoadDataDetail", "EmployeeApprovalTemps")/${data}")><i class="fa fa-align-left"></i> 詳細資料</a><a class='btn btn-warning btn-sm'  style='margin-left:5px' onclick=AcceptSign("@Url.Action("AcceptRegister", "EmployeeApprovalTemps")/${data}")><i class="fa fa-check-square-o"></i> 核准</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=RejectSign("@Url.Action("RejectRegister", "EmployeeApprovalTemps")/${data}")><i class='fa fa-hand-paper-o'></i> 駁回</a>`
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable": "無待簽核事項。"
                }
            });
        });

        //詳細資料
        function PopupForm(Url) {
            var formDiv = $('<div/>');
            $.get(Url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '詳細資料',
                        height: 700,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }
        //核准
        function AcceptSign(Url) {
            if (confirm('確定簽核此筆資料嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function PopupAcceptSign(Url) {
            if (confirm('確定簽核此筆資料嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        Popup.dialog('destroy').remove();
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function RejectSign(Url) {
            if (confirm('確定駁回此筆資料嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function PopupRejectSign(Url) {
            if (confirm('確定駁回此筆資料嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        Popup.dialog('destroy').remove();
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;

        }

        function Delete(id) {
            if (confirm('確定要刪除此筆貼文嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/BulletinBoards/Delete/' + id,
                    success: function (data) {
                        if (data.success) {

                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }

    </script>


}


