@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.CompanyVehicle>

@{
    ViewBag.Title = "Index";
}

<style>


    button {
        font-family: 'NotoSansCJKtc-Bold';
    }

    h2 {
        font-family: 'NotoSansCJKtc-Bold';
    }
</style>

<h2>公務車租借紀錄</h2>


@*<button onclick="location.href='/BulletinBoards/Create'" type="button" class="btn btn-success"><i class="fa fa-comment" aria-hidden="true"></i> 新增貼文</button>*@

<br /><br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('/CompanyVehicles/AddOrEdit2')"><i class="fa fa-plus" aria-hidden="true"></i> 新增公務車</button>
<div style="width:92%">
    <table id="Htable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>公務車照片</th>
                <th>車牌號碼</th>
                <th>車輛年份</th>
                <th>購入日期</th>
                <th>車輛廠牌</th>
                <th>車輛型號</th>
                <th>乘坐人數</th>
                <th>辦公室位置</th>
            </tr>
        </thead>
    </table>



</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>
    <script>







        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#Htable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadData", "CompanyVehicles")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [

                    {
                        "targets": 0, "data": "VehiclePhoto2", "render": function (url, type, full) {
                            return '<img height="60px" src="' + url + '"/>';
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "300px"
                    },
                    { "targets": 1, "data": "LicenseNumber", "width": "75px" },
                    { "targets": 2, "data": "VehicleYear", "width": "75px"},
                    { "targets": 3, "data": "PurchaseDate", "width": "100px", "render": function (data) { return moment(data).format("YYYY-MM-DD") }, "width": "135px"  },
                    { "targets": 4, "data": "brand" },
                    { "targets": 5, "data": "serial" },
                    { "targets": 6, "data": "MaxPassenger" },
                    { "targets": 7, "data": "officename" },
                    

                ],
                "language": {

                    "emptyTable": "目前無公務車，請點選<b>新增公務車</b>"
                }

            });

        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '借車事由',
                        height: 800,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;

        }

        function Delete(id) {
            console.log(id)
            if (confirm('確定要刪除此筆貼文嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/CompanyVehicleHistories/Delete/' + id,
                    success: function (data) {
                        if (data.success) {

                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }

    </script>


}