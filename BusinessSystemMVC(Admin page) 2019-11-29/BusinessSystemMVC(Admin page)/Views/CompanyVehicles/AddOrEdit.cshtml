    @Html.LabelFor(Model => Model.VehicleYear, "車輛年份", new { @class = "control-label" })
    @Html.TextBoxFor(Model => Model.VehicleYear, new { rows = "1", cols = "150", @class = "form-control", @MaxLength = "4" })
