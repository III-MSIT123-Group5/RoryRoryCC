<h2>請購簽核</h2>

<br /><br />

<div style="width:92%">
    <table id="ApprovalTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th rowspan="2">簽核/駁回</th>
                <th rowspan="2">請購單編號</th>
                <th rowspan="2">產品</th>
                <th rowspan="2">單價</th>
                <th rowspan="2">數量</th>
                <th rowspan="2">總價</th>
                <th rowspan="2">原由</th>
                <th colspan="2">第一層簽核狀態</th>
                <th colspan="2">第二層簽核狀態</th>
                <th colspan="2">第三層簽核狀態</th>
                <th colspan="2">第四層簽核狀態</th>                            
            </tr>
            <tr>
                <th>簽核人</th>
                <th>簽核狀態</th>
                <th>簽核人</th>
                <th>簽核狀態</th>
                <th>簽核人</th>
                <th>簽核狀態</th>
                <th>簽核人</th>
                <th>簽核狀態</th>
            </tr>
        </thead>
    </table>
</div>


@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#ApprovalTable').DataTable({
                "ajax": {
                    url: '/OrderDetails/LoadDataSign',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    {
                        "targets": 0,
                        "data": "OrderID",
                        "width":"150px",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            return `<a class='btn btn-warning btn-sm' onclick=Submit("@Url.Action("ApprovalSubmit", "OrderDetails")/${data}")><i class='fa fa-pencil'></i> 簽核</a>
                                        <a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Reject("@Url.Action("ApprovalReject", "OrderDetails")/${data}")><i class='fa fa-trash'></i> 駁回</a>`
                        },
                        "orderable": false,
                        "searchable": false,
                    },
                    {
                        "targets": 1,
                        "data": "OrderID",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 2,
                        "data": "ProductName",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 3,
                        "data": "UnitPrice",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 4,
                        "data": "Quantity",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 5,
                        "data": "TotalPrice",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 6,
                        "data": "Note",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 7,
                        "data": "FirstSignerName",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 8,
                        "data": "FirstSignStatus",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核") {
                                color = "black";
                            }
                            else{
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 9,
                        "data": "SecondSignerName",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 10,
                        "data": "SecondSignStatus",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核") {
                                color = "black";
                            }
                            else {
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 11,
                        "data": "ThirdSignerName",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 12,
                        "data": "ThirdSignStatus",
                        "className": "text-center align-middle",
                        "render": function (data) {

                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核" || data == "免審核") {
                                color = "black";
                            }
                            else{
                                color = "red";
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 13,
                        "data": "FourthSignerName",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 14,
                        "data": "FourthSignStatus",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核") {
                                color = "black";
                            }
                            else {
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                ],
                "language": {
                    "emptyTable": "目前無未簽核請購單"
                }
            });
        });

        function Submit(Url) {
            if (confirm('確定要簽核此筆請購嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }

        function Reject(Url) {
            if (confirm('確定要駁回此筆請購嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '詳細簽核',
                        height: 600,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        //function SubmitForm(form) {
        //    $.validator.unobtrusive.parse(form);
        //    if ($(form).valid()) {
        //        $.ajax({
        //            type: "POST",
        //            url: form.action,
        //            data: $(form).serialize(),
        //            success: function (data) {
        //                if (data.success) {

        //                    Popup.dialog("close");
        //                    dataTable.ajax.reload();

        //                    $.notify(data.message, {
        //                        globalPosition: "top center",
        //                        className: "success"
        //                    })
        //                }
        //            }
        //        });
        //    }
        //    return false;
        //}


    </script>
}


