@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

@section Styles{
    <style>
        button, h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }

        th {
            font-family: 'NotoSansCJKtc-Bold';
        }

        td {
            font-family: '微軟正黑體';
            font-weight: 600;
        }
    </style>

    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<h2>請購簽核查詢</h2>

<br /><br />

      <div style="width:92%">
          <table id="ApprovalProgressTable" class="table table-striped table-bordered">
              <thead>
                  <tr>
                      <th>審核狀況</th>
                      <th>請購單編號</th>
                      <th>產品</th>
                      <th>單價</th>
                      <th>數量</th>
                      <th>總價</th>
                      <th>第一層簽核狀態</th>
                      <th>第二層簽核狀態</th>
                      <th>第三層簽核狀態</th>
                      <th>第四層簽核狀態</th>
                      <th>詳細內容</th>
                  </tr>
              </thead>
          </table>
      </div>


@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#ApprovalProgressTable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadDataSignProgress", "OrderDetails")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    {
                        "targets": 0,
                        "data": "StatusName",
                        "width": "80px",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "審核中") {
                                color = "orange";
                            }
                            else if (data == "審核完成") {
                                color = "mediumseagreen";
                            }
                            else {
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        },
                    },
                    {
                        "targets": 1,
                        "data": "OrderID",
                        "width": "90px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 2,
                        "data": "ProductName",
                        "width": "90px",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 3,
                        "data": "UnitPrice",
                        "width": "70px",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 4,
                        "data": "Quantity",
                        "width": "70px",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 5,
                        "data": "TotalPrice",
                        "width": "70px",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 6,
                        "data": "FirstSignStatus",
                        "width": "130px",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核") {
                                color = "black";
                            }
                            else {
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 7,
                        "data": "SecondSignStatus",
                        "width": "130px",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核") {
                                color = "black";
                            }
                            else {
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 8,
                        "data": "ThirdSignStatus",
                        "width": "130px",
                        "className": "text-center align-middle",
                        "render": function (data) {

                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核" || data == "免審核") {
                                color = "black";
                            }
                            else {
                                color = "red";
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 9,
                        "data": "FourthSignStatus",
                        "width": "130px",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            if (data == "未審核") {
                                color = "orange";
                            }
                            else if (data == "已審核") {
                                color = "black";
                            }
                            else {
                                color = "red"
                            }
                            return `<span style="color: ${color}">${data}</span>`;
                        }
                    },
                    {
                        "targets": 10,
                        "data": "OrderID",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            return `<a class='btn btn-warning btn-sm' onclick=PopupForm('@Url.Action("DetailSignProgress", "OrderDetails")/${ data }')><i class='fa fa-list-alt'></i> 內容</a>`
                        },
                        "orderable": false,
                        "searchable": false,
                    },

                ],
                "language": {
                    "emptyTable": "目前無未簽核請購單"
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '詳細內容',
                        height: 600,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;
        }
    </script>
}