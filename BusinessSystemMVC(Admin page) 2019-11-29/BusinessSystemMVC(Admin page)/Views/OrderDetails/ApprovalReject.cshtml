@model BusinessSystemMVC_Admin_page_.Models.RequisitionMain

@{
    Layout = null;
}

@using (Html.BeginForm("ApprovalReject", "OrderDetails", FormMethod.Post, new { onsubmit = "return Reject(this)" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.OrderID)
    @Html.HiddenFor(model => model.ReportID)
    @Html.HiddenFor(model => model.EmployeeID)
    @Html.HiddenFor(model => model.RequisitionDate)
    @Html.HiddenFor(model => model.Price)
    @Html.HiddenFor(model => model.ApprovalStatusID)


    <div class="form-group">
        @Html.LabelFor(model => model.ApprovaStatus, "原因", new { @class = "control-label" })
        @Html.EditorFor(model => model.ApprovaStatus, new { htmlAttributes = new { @class = "form-control", @Value = "" } })
        @Html.ValidationMessageFor(model => model.ApprovaStatus)
    </div>

    <div class="form-group" style="float:left">
            <button type="button" class="btn btn-info" style="background-color:	#a5a5af; border-color:transparent" onclick="$('#ApprovaStatus').val('新進員工只有2位');">
                Demo
            </button>            
    </div>
    <div class="form-group" style="float:right">
        <div>
            <input type="reset" value="清除" class="btn btn-warning" style="margin-right:10px" />
            <input type="submit" value="送出" class="btn btn-success" style="margin-right:10px" />
        </div>
    </div>

}
