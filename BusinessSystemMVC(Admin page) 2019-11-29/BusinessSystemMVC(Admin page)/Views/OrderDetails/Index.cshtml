<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#RequisitionTable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadData", "OrderDetails")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    {                      
                        "targets": 0,
                        "data": "OrderDetailID",
                        "width": "100px",
                        "className": "text-center align-middle"        
                    },
                    {
                        "targets": 1,
                        "data": "RequisitionDate",
                        "width": "200px",
                        "className": "text-center align-middle",                        
                        "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }
                    },
                    {
                        "targets": 2,
                        "data": "ProductName",
                        "width": "150px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 3,
                        "data": "UnitPrice",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 4,
                        "data": "Quantity",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 5,
                        "data": "TotalPrice",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 6,
                        "data": "Note",
                        "className":"align-middle",
                        "orderable": false,
                    },
                    {
                        "targets": 7,
                        "data": "OrderDetailID",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            return "<a class='btn btn-warning btn-sm' onclick=PopupForm('/OrderDetails/Export/" + data + "')><i class='fa fa-file-excel-o'></i> 下載</a><a class='btn btn-danger btn-sm' style='margin-left:5px; background-color:	#FF0000' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> 刪除</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "120px"
                    }
                ],
                "language": {
                    "emptyTable": "目前無貼文，請點選<b>新增請購</b>"
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '新增請購單',
                        height: 470,
                        width: 500,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            if (confirm('確定要刪除此筆請購單嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/OrderDetails/Delete/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }

        
    </script>
}

