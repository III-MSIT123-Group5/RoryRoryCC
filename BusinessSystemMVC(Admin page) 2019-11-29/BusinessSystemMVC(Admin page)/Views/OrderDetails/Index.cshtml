@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<style>
    button, h2 {
        font-family: 'NotoSansCJKtc-Bold';
    }

    th {
        font-family: 'NotoSansCJKtc-Bold';
    }

    td {
        font-family: '微軟正黑體';
        font-weight: 600;
    }
</style>

<br />

<h2>請購系統</h2>

<br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddOrEdit", "OrderDetails")')"><i class="fa fa-plus" aria-hidden="true"></i> 新增請購</button>
<br /><br />
<div style="width:97%">
    <table id="RequisitionTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr style="text-align:center">
                <th>請購單編號</th>
                <th>請購日期</th>
                <th>產品名稱</th>
                <th>單價</th>
                <th>數量</th>
                <th>總價</th>
                <th>原由</th>
                <th>下載/刪除</th>
            </tr>
        </thead>
    </table>
</div>

<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; 

        $(document).ready(function () {
            dataTable = $('#RequisitionTable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadData", "OrderDetails")',
                    method: 'GET',
                    dataType: 'json'
                },
                "order":[1,"desc"],
                "columnDefs": [
                    {                      
                        "targets": 0,
                        "data": "OrderID",
                        "width": "100px",
                        "className": "text-center align-middle"        
                    },
                    {
                        "targets": 1,
                        "data": "RequisitionDate",
                        "width": "200px",
                        "className": "text-center align-middle",                        
                        "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }
                    },
                    {
                        "targets": 2,
                        "data": "ProductName",
                        "width": "150px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 3,
                        "data": "UnitPrice",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 4,
                        "data": "Quantity",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 5,
                        "data": "TotalPrice",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 6,
                        "data": "Note",
                        "className":"align-middle",
                        "orderable": false,
                    },
                    {
                        "targets": 7,
                        "data": "OrderDetailID",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            return `<a class='btn btn-warning btn-sm' onclick=ExportForm("@Url.Action("Export", "OrderDetails")/${data}")><i class='fa fa-file-excel-o'></i> 下載</a><a class='btn btn-danger btn-sm' style='margin-left:5px; background-color:#FF0000' onclick=Delete("@Url.Action("Delete", "OrderDetails")/${data}")><i class='fa fa-trash'></i> 刪除</a>`
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable": "目前無貼文，請點選<b>新增請購</b>",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '新增請購單',
                        height: 470,
                        width: 500,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(Url) {
            if (confirm('確定要刪除此筆請購單嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }

        function ExportForm(Url) {
            if (confirm('請先確認是否關閉先前檔案!!!')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }        
    </script>
}