@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.File>

@{
    ViewBag.Title = "檔案管理";
}

<style>
    button, h2 {
        font-family: 'NotoSansCJKtc-Bold';
    }

    th {
        font-family: 'NotoSansCJKtc-Bold';
    }

    td {
        font-family: '微軟正黑體';
        font-weight: 600;
    }
</style>

<br />

<h2>檔案管理</h2>

<br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('/Files/Upload')"><i class="fa fa-plus" aria-hidden="true"></i> 上傳</button>
<button class="btn btn-success" style="margin-bottom:10px" onclick="location.href='@Url.Action("DownloadAll", "Files")'"><i class="fa fa-plus" aria-hidden="true"></i> 全部下載</button>
<br />
@using (Html.BeginForm("DownloadChoose", "Files", FormMethod.Post, new { enctype = "multipart/form-data", @name = "form1" }))
{
    <button class="btn btn-success" style="margin-bottom:10px" id="DownloadChoose"><i class="fa fa-plus" aria-hidden="true"></i> 下載</button>
}
    <br />
<div style="width:97%">
    <table id="Btable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th><input type="checkbox" id="CheakAll" /></th>
                <th>檔名</th>
                <th>檔案大小</th>
                <th>檔案類型</th>
                <th>上傳時間</th>
                <th>上傳者</th>
                <th>刪除</th>
            </tr>
        </thead>
    </table>



</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable;

        $(document).ready(function () {
            dataTable = $('#Btable').DataTable({
                "ajax": {
                    url: '/Files/LoadData',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    {
                        "targets": 0, "data": "FileID", "render": function (data) {
                            return "<input type='checkbox' name='Cheak' value=" + data + " />"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px"
                    },
                    {
                        "targets": 1, "data": "FileName",
                        //"render": function (data) {
                        //    return "<a onclick=Download(" + data + ")></a>"
                        //},
                        "width": "300px"
                    },
                    { "targets": 2, "data": "FileSize", "width": "60px" },
                    { "targets": 3, "data": "Extension", "width": "60px" },
                    { "targets": 4, "data": "UploadDate", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px" },
                    { "targets": 5, "data": "EmployeeName", "width": "60px" },
                    {
                        "targets": 6, "data": "FileID", "render": function (data) {
                            return "<a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> 刪除</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "60px"
                    }

                ],
                "language": {

                    "emptyTable": "尚未上傳檔案"
                }

            });

        });




        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '上傳文件',
                        height: 250,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                    $('#department').bind("change", function () {
                        ChangeDepartment();
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            if (confirm('確定要刪除檔案嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/Files/Delete/' + id,
                    success: function (data) {
                        if (data.success) {

                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }

        $(document).ready(function () {
            $("#CheakAll").click(function () {
                if ($("#CheakAll").prop("checked")) {//如果全選按鈕有被選擇的話（被選擇是true）
                    $("input[name='Cheak']").prop("checked", true);//把所有的核取方框的property都變成勾選
                } else {
                    $("input[name='Cheak']").prop("checked", false);//把所有的核取方框的property都取消勾選
                }
            })
        });

        $("input[name='Cheak']").on("change", function () {

            //全部都選到了,"全部"這個選項打勾,反之,則取消
            if ($("input[name='Cheak']").length == $("input[name='Cheak']:checked").length) {
                $("#CheakAll").prop("checked", true);
            }
            else {
                $("#CheakAll").prop("checked", false);
            }
        });




            //$("#DownloadChoose").on("click", function () {
            //    window.form1.action = 'DownloadChoose';
            //    window.document.form1.submit();
            //});

    </script>

}





