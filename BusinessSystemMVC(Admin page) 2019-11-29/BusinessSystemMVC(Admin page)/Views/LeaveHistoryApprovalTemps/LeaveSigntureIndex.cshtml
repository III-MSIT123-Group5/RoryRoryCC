@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.LeaveHistoryApprovalTemp>

@section Styles{
    <style>
        button, h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }

        th {
            font-family: 'NotoSansCJKtc-Bold';
        }

        td {
            font-family: '微軟正黑體';
            font-weight: 600;
        }
    </style>

    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<br />

<h2>請假簽核</h2>

<br />
<div style="width:97%">
    <table id="LeaveSigntable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr style="text-align:center">
                <th>員工姓名</th>
                <th>假別</th>
                <th>部門</th>
                <th>組別</th>
                <th>職稱</th>
                <th>申請時間</th>
                <th>起始時間</th>
                <th>結束時間</th>
                <th>詳細資料/核准/駁回</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $('#LeaveSigntable').DataTable({
                "ajax": {
                    url: '@Url.Action("LeaveSigntureLoadData", "LeaveHistoryApprovalTemps")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    { "targets": 0, "data": "EmployeeName", "width": "55px", "className": "text-center align-middle" },
                    { "targets": 1, "data": "leave_name", "width": "45px", "className": "text-center align-middle" },
                    { "targets": 2, "data": "name", "width": "45px", "className": "text-center align-middle" },
                    { "targets": 3, "data": "GroupName", "width": "45px", "className": "text-center align-middle" },
                    { "targets": 4, "data": "position1", "width": "45px", "className": "text-center align-middle" },
                    { "targets": 5, "data": "ReleaseTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "120px", "className": "text-center align-middle" },
                    { "targets": 6, "data": "StartTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "120px", "className": "text-center align-middle" },
                    { "targets": 7, "data": "EndTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "120px", "className": "text-center align-middle" },
                   {
                       "targets": 8, "data": "ID", "render": function (data) {
                           return `<a class='btn btn-warning btn-sm' onclick=PopupDetail("@Url.Action("SignLeaveLoadDataDetail", "LeaveHistoryApprovalTemps")/${data}")><i class="fa fa-align-left"></i> 詳細資料</a><a class='btn btn-warning btn-sm'  style='margin-left:5px' onclick=AcceptSign("@Url.Action("AcceptLeave", "LeaveHistoryApprovalTemps")/${data}")><i class="fa fa-check-square-o"></i> 核准</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=RejectSign("@Url.Action("RejectLeave", "LeaveHistoryApprovalTemps")/${data}")><i class='fa fa-hand-paper-o'></i> 駁回</a>`
                        },
                        "orderable": false,
                        "searchable": false,
                       "width": "150px",
                       "className": "text-center align-middle"
                    }
                ],
                "language": {
                    "emptyTable": "無待簽核假單。",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }
            });
        });


        //===============
        function PopupDetail(Url) {
            var formDiv = $('<div/>');
            $.get(Url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '詳細資料',
                        height: 650,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }
        //核准
        function AcceptSign(Url) {
            if (confirm('確定簽核此筆假單嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function PopupAcceptSign(Url) {
            if (confirm('確定簽核此筆假單嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        Popup.dialog('destroy').remove();
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function RejectSign(Url) {
            if (confirm('確定駁回此筆假單嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }

        function PopupRejectSign(Url) {
            if (confirm('確定駁回此筆假單嗎?')) {
                $.ajax({
                    type: "POST",
                    url: Url,
                }).done(function (data) {
                    if (data.success) {
                        Popup.dialog('destroy').remove();
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                });
            }
        }
    </script>
}

