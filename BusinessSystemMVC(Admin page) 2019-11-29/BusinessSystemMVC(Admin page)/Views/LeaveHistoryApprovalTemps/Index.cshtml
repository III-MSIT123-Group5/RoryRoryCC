@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.LeaveHistoryApprovalTemp>

@{
    ViewBag.Title = "個人請假系統";
}

@section Styles{
    <style>
        button {
            font-family: 'NotoSansCJKtc-Bold';
        }

        h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }
    </style>

    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<h2>@ViewBag.Title</h2>

<br /><br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupNewLeaveForm('@Url.Action("Create","LeaveHistoryApprovalTemps")')"><i class="fa fa-plus" aria-hidden="true"></i> 請假申請</button>
<h3>已送出的請假簽核進度</h3>
<br />
<div style="width:92%">
    <table id="Leavetable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>假別</th>
                <th>申請時間</th>
                <th>起始時間</th>
                <th>結束時間</th>
                <th>簽核進度</th>
                <th>詳細資料/取消申請</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"
    
        //請假進度
        $(document).ready(function () {
            dataTable = $('#Leavetable').DataTable({
                "ajax": {
                    url: '@Url.Action("LeaveLoadData", "LeaveHistoryApprovalTemps")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    { "targets": 0, "data": "leave_name","width": "65px" },
                    { "targets": 1, "data": "ReleaseTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px" },
                    { "targets": 2, "data": "StartTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px" },
                    { "targets": 3, "data": "EndTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px" },
                    { "targets": 4, "data": "Status", "width": "100px" },
                    {
                        "targets": 5, "data": "ID", "render": function (data) {
                            return "<a class='btn btn-warning btn-sm' onclick=PopupForm('/BulletinBoards/AddOrEdit/" + data + "')><i class='fa fa-pencil'></i> 詳細資料</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=(" + data + ")><i class='fa fa-trash'></i> 取消申請</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable": "無待簽核申請。"
                }
            });
        });
        //新增的Popupform================
        function PopupNewLeaveForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '請假',
                        height: 400,
                        width: 500,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });

                    var StartYearLab = $("#StartYear");
                    var EndYearLab = $("#EndYear");
                    var StartMonthLab = $("#StartMonth");
                    var EndMonthLab = $("#EndMonth");
                    var StartDayLab = $("#StartDay");
                    var EndDayLab = $("#EndDay");

                    $("#StartMonth").bind("change", function () {         //$
                        GetNewDays($("#StartYear"), $("#StartMonth"), $("#StartDay"));
                    });
                    $("#EndMonth").bind("change", function () {
                        GetNewDays($("#EndYear"), $("#EndMonth"), $("#EndDay"));
                    });
                    $("#leaveID").bind("change", function () {
                        if (this.value != 2) {
                            //$("#StartYear").bind("change", function () { GetNewMonthTimes($("#StartYear").val(), $("#StartMonth")); });
                            //$("#EndYear").bind("change", function () { GetNewMonthTimes($("#EndYear").val(), $("#EndMonth")); });
                            GetNewYearTimes();
                            //GetNewDayTimes();
                        }                        
                    })
                });
        }

        function SubmitLeaveForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog("close");
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }
    //新增Popup裡的Scripts================


        function GetNewDays(yearlab , monthlab , daylab) {
            daylab.empty();
            for (let i = 1; i <= getDays(yearlab.val(), monthlab.val()); i++) {
                var ops = new Option(i, i);
                daylab.append(ops);
            }
        }
       function getDays(year , month) {
        var yy = year;     /*year.val();*/
        var mm = month;      /*month.val();*/
        var dd = new Date(yy, mm, 0);
        var days = dd.getDate();
         return days;
       }
        //依假別給時間
        function GetNewYearTimes() {
            $.ajax({
                type: "Post",
            url: "@Url.Action("GetNewYearTime", "LeaveHistoryApprovalTemps")",
            }).done(function (datas) {
                $("#StartYear").empty();
                $("#EndYear").empty();
                datas.forEach(function (item) {
                    var ops = new Option(item, item);
                    $("#StartYear").append(ops);
                    $("#EndYear").append(ops);
                });
                }).fail();
        }
        function GetNewMonthTimes(thisyearval , monthLab) {
            $.ajax({
            type: "GET",
                url: "@Url.Action("GetNewMonthTime", "LeaveHistoryApprovalTemps")",
                data: { thisYEAR: thisyearval  }
            }).done(function (datas) {
                monthLab.empty();
                datas.forEach(function (item) {
                    var ops = new Option(item.Txt, item.Val);
                    monthLab.append(ops);
                });
                }).fail();
        }
    
//新增Popup裡的Scripts================

        //新增的Popupform================
        function Delete(id) { //不要真刪，SignState && Reject為true為取消
            if (confirm('確定要刪除此筆貼文嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/BulletinBoards/Delete/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }
    </script>
}