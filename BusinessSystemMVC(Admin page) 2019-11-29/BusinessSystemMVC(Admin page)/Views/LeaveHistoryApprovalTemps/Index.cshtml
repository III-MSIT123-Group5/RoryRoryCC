        //新增的Popupform================
        function PopupLeaveForm(Url) {
            var formDiv = $('<div/>');
            $.get(Url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '請假申請',
                        height: 700,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                    $("#leaveID").bind("change", function () {
                        if (this.value == 0 || this.value == 1) {
                            GetNewYearTimes();
                            $("#StartYear").bind("change", GetNewMonthTimes($("#StartYear"), $("#StartMonth")));
                            $("#EndYear").bind("change", GetNewMonthTimes($("#EndYear"), $("#EndMonth")));
                            $("#StartMonth").bind("change", GetNewDayTimes($("#StartYear"), $("#StartMonth"), $("#StartDay")));
                            $("#EndMonth").bind("change", GetNewDayTimes($("#EndYear"), $("#EndMonth"), $("#EndDay")));
                        }
                    })
                    $("#StartMonth").bind("change", function () {
                        GetNewDayTimes($("#StartYear"), $("#StartMonth"), $("#StartDay"));
                    });
                    $("#EndMonth").bind("change", function () {
                        GetNewDayTimes($("#EndYear"), $("#EndMonth"), $("#EndDay"));
                    });
                    $("#StartYear").bind("change", GetNewMonthTimes($("#StartYear"), $("#StartMonth")));
                    $("#EndYear").bind("change", GetNewMonthTimes($("#EndYear"), $("#EndMonth")));

                    $("#EndYear").bind("change", GetNewMonthTimes($("#EndYear"), $("#EndMonth")));

                });
        }
        //大小月
        function GetNewDays(yearlab , monthlab , daylab) {
            daylab.empty();
            for (let i = 1; i <= getDays(yearlab.val(), monthlab.val()); i++) {
                var ops = new Option(i, i);
                daylab.append(ops);
            }
        }
       function getDays(year , month) {
        var yy = year;              /*year.val();*/
        var mm = month;      /*month.val();*/
        var dd = new Date(yy, mm, 0);
        var days = dd.getDate();
         return days;
       }
        //依假別給時間
        function GetNewDayTimes(yearlab , monthlab ,daylab ) {
            $.ajax({
