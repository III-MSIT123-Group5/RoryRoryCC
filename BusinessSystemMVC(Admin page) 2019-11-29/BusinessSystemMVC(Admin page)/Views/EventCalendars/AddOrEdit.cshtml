@model BusinessSystemMVC_Admin_page_.Models.EventCalendar

@{


    Layout = null;

}



@using (Html.BeginForm("AddOrEdit", "EventCalendarsController", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.CalendarID)
    @Html.HiddenFor(model => model.employeeID)


<div class="form-group">

    <div class="taglabel">
        @Html.LabelFor(model => model.Subject, new { @class = "control-label" })
    </div>
    @Html.TextBoxFor(model => model.Subject, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000" })
    @Html.ValidationMessageFor(model => model.Subject)
    <br />


    <div class="taglabel">
        @Html.LabelFor(model => model.DepartmentID, new { @class = "control-label" })
    </div>

    @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.DepartmentID)
    <br />

    
    <div class="taglabel">
         <div class="input-group date" id="datetimepicker1" data-target-input="nearest" style="width:642.63px">
            <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1" style="padding-left:0px" />
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
         </div>
                   
       
         <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').datetimepicker();
                    });
          </script>
          
        @Html.LabelFor(model => model.StartTime, new { @class = "control-label" })
    </div>
    @Html.TextBoxFor(model => model.StartTime, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000", @id= "datetimepicker2" })
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker2').datetimepicker();
        });
    </script>
    
    
    @Html.ValidationMessageFor(model => model.StartTime)
    <br />

    <div class="taglabel">
        @Html.LabelFor(model => model.EndTime, new { @class = "control-label" })
    </div>
    @Html.TextBoxFor(model => model.EndTime, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000" })
    @Html.ValidationMessageFor(model => model.EndTime)
    <br />

    <div class="taglabel">
        @Html.LabelFor(model => model.Location, new { @class = "control-label" })
    </div>
    @Html.TextBoxFor(model => model.Location, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000" })
    @Html.ValidationMessageFor(model => model.Location)
    <br />

    <div class="taglabel">
        @Html.LabelFor(model => model.Description, new { @class = "control-label" })
    </div>
    @Html.TextAreaFor(model => model.Description, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000" })
    @Html.ValidationMessageFor(model => model.Description)
    <br />

    <div class="taglabel">
        @Html.LabelFor(model => model.IsFullday, new { @class = "control-label" })
    </div>
    @Html.TextBoxFor(model => model.IsFullday, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000" })
    @Html.ValidationMessageFor(model => model.IsFullday)
    <br />

    <div class="taglabel">

    </div>
    @Html.LabelFor(model => model.IsImportant, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.IsImportant, new { rows = "8", cols = "150", @class = "form-control", @MaxLength = "1000" })
    @Html.ValidationMessageFor(model => model.IsImportant)
</div>

    <div class="form-group" style="float:right">

        <div>
            <input type="reset" value="清除" class="btn btn-warning" style="margin-right:10px" />
            <input type="submit" value="送出貼文" class="btn btn-success" style="margin-right:10px" />

        </div>
    </div>

}