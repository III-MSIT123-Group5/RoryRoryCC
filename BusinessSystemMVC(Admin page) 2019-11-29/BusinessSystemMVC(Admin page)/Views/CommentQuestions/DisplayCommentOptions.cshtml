@model BusinessSystemMVC_Admin_page_.Models.CommentQuestion

@{
//Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>編寫調查分類</title>
        <style>

            h2, label, span, select, option, th, button {
                font-family: 'NotoSansCJKtc-Bold';
            }

            td, select, option {
                font-family: '微軟正黑體';
            }

            td {
                font-family: '微軟正黑體';
                font-weight: 600;
            }

            label, select, option, td {
                font-family: '微軟正黑體';
            }
        </style>
    </head>
    <body>
        <h2>編輯調查分類</h2>
        <br />
        <div class="col-md-10">
            <button type="button" class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddOrEditCO", "CommentQuestions")')"><i class="fa fa-plus" aria-hidden="true"></i> 新增調查分類</button>
        </div>
        <div @*class="col-md-10"*@ id="createCtable" style="width:82%;margin-left:20px">
            <table id="Ctable" class="table table-striped table-bordered">
                <thead>
                    <tr style="text-align:center">
                        <th>編號</th>
                        <th>調查分類名稱</th>
                        <th>編輯/刪除</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>


        @*<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />*@
        <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

        @section scripts{
            <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
            <script src="~/Scripts/notify.min.js"></script>

            <script>
            var Popup, dataTable;

            $(document).ready(function () {
                dataTable = $('#Ctable').DataTable({
                    "ajax": {
                        url: '@Url.Action("LoadCommentOptions", "CommentQuestions")',
                        method: 'GET',
                        dataType: 'json'
                    },
                    "columnDefs": [

                        {
                            "targets": 0, "data": null,
                            "width": "40px",
                            "searchable": false,
                            "orderable": false,
                            "targets": 0,
                            "className": "text-center align-middle"
                        },
                        { "targets": 1, "data": "CommentOption1",/* "width": "60px"*/ },
                        {
                            "targets": 2, "data": "CommentOptionID", "render": function (data) {
                                return `<a class='btn btn-warning btn-sm' onclick=PopupForm('@Url.Action("AddOrEditCO", "CommentQuestions")/${data}')><i class='fa fa-pencil'></i> 編輯</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(${data})><i class='fa fa-trash'></i> 刪除</a>`

                            },
                            "orderable": false,
                            "searchable": false,
                            "width": "150px"
                        }

                    ],
                    "order": [[1, 'asc']],
                    "language": {

                        "emptyTable": "目前無任何分類，請點選<b>新增調查分類</b>",
                        "processing": "處理中...",
                        "loadingRecords": "載入中...",
                        "lengthMenu": "顯示 _MENU_ 項結果",
                        "zeroRecords": "沒有符合的結果",
                        "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                        "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                        "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                        "infoPostFix": "",
                        "search": "搜尋:",
                        "paginate": {
                            "first": "第一頁",
                            "previous": "上一頁",
                            "next": "下一頁",
                            "last": "最後一頁"
                        },
                        "aria": {
                            "sortAscending": ": 升冪排列",
                            "sortDescending": ": 降冪排列"
                        }
                    }
                });

                dataTable.on('order.dt search.dt', function () {
                    dataTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();


            });

            function PopupForm(url) {
                var formDiv = $('<div/>');
                $.get(url)
                    .done(function (response) {
                        formDiv.html(response);

                        Popup = formDiv.dialog({
                            autoOpen: true,
                            resizable: false,
                            title: '新增一項調查分類',
                            height: 210,
                            width: 700,
                            close: function () {
                                Popup.dialog('destroy').remove();
                            }
                        });
                    });
            }

            function SubmitForm(form) {
                $.validator.unobtrusive.parse(form);
                if ($(form).valid()) {
                    $.ajax({
                        type: "POST",
                        url: form.action,
                        data: $(form).serialize(),
                        success: function (data) {
                            if (data.success) {

                                Popup.dialog("close");
                                dataTable.ajax.reload();

                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "success"
                                })
                            }

                        }
                    });
                }
                return false;

            }

            function Delete(id) {
                if (confirm('確定要刪除此項調查分類嗎?')) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("DeleteCO", "CommentQuestions")/'+id, /*'/CommentQuestions/DeleteCO/' + id,*/
                        success: function (data) {
                            if (data.success) {

                                dataTable.ajax.reload();

                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "success"
                                })

                            }
                        }

                    });
                }
            }
            </script>

        }
    </body>
</html>
}