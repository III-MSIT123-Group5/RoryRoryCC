<div style="width:97%">
    <table id="Htable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>會議室ID</th>
                <th>會議室名稱</th>
                <th>會議室位置</th>
                <th>起始時間</th>
                <th>結束時間</th>
                <th>預約人</th>
                <th>紀錄刪除</th>
            </tr>
        </thead>
    </table>



</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>
    <script>







        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#Htable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadData", "MeetingRoomHistories")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [

                    //{
                    //    "targets": 0, "data": "Photo", "render": function (url, type, full) {
                    //        return '<img height="60px" src="' + url + '"/>';
                    //    },
                    //    "orderable": false,
                    //    "searchable": false,
                    //    "width": "65px"
                    //},
                    { "targets": 0, "data": "meetingID", "width": "60px" },
                    { "targets": 1, "data": "meetName", "width": "60px" },
                    { "targets": 2, "data": "address" },
                    { "targets": 3, "data": "start_date_time", "width": "60px", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px" },
                    { "targets": 4, "data": "end_date_time", "width": "60px", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "135px"  },
                    { "targets": 5, "data": "empName" },
                    {
                        "targets": 6, "data": "MeetingRoomID", "render": function (data) {
                            return "<a class='btn btn-danger btn-sm' style='margin-left:5px;' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> 紀錄刪除 </a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }

                ],
                "language": {

                    "emptyTable": "目前無<b>租借紀錄</b>"
                }

            });

        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '借車事由',
                        height: 200,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;

        }

        function Delete(id) {
            console.log(id)
            if (confirm('確定要刪除此筆貼文嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '/MeetingRoomHistories/Delete/' + id,
                    success: function (data) {
                        if (data.success) {

                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }

    </script>


}