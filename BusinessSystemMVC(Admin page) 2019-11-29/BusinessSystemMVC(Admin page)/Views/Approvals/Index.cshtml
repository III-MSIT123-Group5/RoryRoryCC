@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.Approval>

@{
    ViewBag.Title = "Index";
}

@section Styles{
    <style>
        button {
            font-family: 'NotoSansCJKtc-Bold';
        }

        h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }
    </style>

    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<h2>簽核系統</h2>

<br /><br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('/Approvals/AddOrEdit')"><i class="fa fa-plus" aria-hidden="true"></i> 新增貼文</button>
<div style="width:92%">
    <table id="ApprovalTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>請購單編號</th>
                <th>第一層簽核狀態</th>
                <th>第二層簽核狀態</th>
                <th>第三層簽核狀態</th>
                <th>第四層簽核狀態</th>
                <th>編輯/刪除</th>
            </tr>
        </thead>
    </table>
</div>


@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#ApprovalTable').DataTable({
                "ajax": {
                    url: '/Approvals/LoadData',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    {
                        "targets": 0,
                        "data": "OrderID",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 1,
                        "data": "FirstSignStatus",
                        "width": "200px",
                        "className": "text-center align-middle",
                    },
                    {
                        "targets": 2,
                        "data": "SecondSignStatus",
                        "width": "150px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 3,
                        "data": "ThirdSignStatus",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 4,
                        "data": "FourthSignStatus",
                        "width": "100px",
                        "className": "text-center align-middle"
                    },
                    {
                        "targets": 5,
                        "data": "OrderID",
                        "className": "text-center align-middle",
                        "render": function (data) {
                            return "<a class='btn btn-warning btn-sm' onclick=PopupForm('/Approvals/AddOrEdit/" + data + "')><i class='fa fa-pencil'></i> 編輯</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "120px"
                    }

                ],
                "language": {

                    "emptyTable": "目前無未簽核請購單"
                }

            });

        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '新增',
                        height: 400,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;

        }

    </script>
}





