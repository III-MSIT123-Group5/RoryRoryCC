@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.ReportTimeSystem>

@{
    ViewBag.Title = "Index";
}

<style>
    button, h2 {
        font-family: 'NotoSansCJKtc-Bold';
    }

    th {
        font-family: 'NotoSansCJKtc-Bold';
    }

    td {
        font-family: '微軟正黑體';
        font-weight: 600;
    }
</style>

<style>
    th, td {
        width: 10%;
    }
</style>

<br />

<h2>員工回報</h2>

<br />

<div style="width:97%">
    <table id="Rtable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.EmployeeName)
                </th>
                <th>

                    @Html.DisplayNameFor(model => model.ReportName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EventID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplyDateTime)
                </th>
                


            </tr>
        </thead>
    </table>
</div>

<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />


@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>


    <script>


        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {

            dataTable = $('#Rtable').DataTable({
                "ajax": {
                    url: '@Url.Action("TimeControl", "ReportTimeSystems")',
                    method: 'GET',
                    dataType: 'json'

                },
                "columnDefs": [
                    { "targets": 0, "data": "EmployeeName", "width": "75px" },
                    { "targets": 1, "data": "ReportName", "width": "75px" },
                    { "targets": 2, "data": "StartTime", "width": "75px", "width": "100px", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:ss") }, "width": "135px" },
                    { "targets": 3, "data": "EndTime", "width": "75px", "width": "100px", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:ss") }, "width": "135px" },
                    { "targets": 4, "data": "EventHours", "width": "100px" },
                    { "targets": 5, "data": "Note" },
                    { "targets": 6, "data": "EventName" },
                    { "targets": 7, "data": "ApplyDateTime", "width": "100px", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:ss") }, "width": "135px" },

                ],
                "language": {
                    "EventName":"員工名稱",
                    "emptyTable": "目前無報表，請點選<b>新增回報</b>",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "Edit/Delete": "編輯/刪除",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }

            });
            

        });

        



    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>

}
