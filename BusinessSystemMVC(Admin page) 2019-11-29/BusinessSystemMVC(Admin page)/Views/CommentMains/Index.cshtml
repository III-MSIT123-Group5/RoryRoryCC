@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.CommentMain>

@*@{
        Layout = null;
    }*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>意見調查</title>
    <style>


        button, h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }

        th, td {
            font-family: 'NotoSansCJKtc-Light';
        }
    </style>


</head>
<body>
    <h2>意見調查</h2>
    <br />
    <a href="@Url.Action("Create","CommentMains")">新增</a>
    <p>
        <button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('/CommentMains/AddOrEdit')"><i class="fa fa-plus" aria-hidden="true"></i> 新增調查</button>
    </p>
    <div style="width:92%">
        <table id="Ctable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>編號</th>
                    <th>調查類型</th>
                    <th>意見調查名稱</th>
                    <th>調查者</th>
                    <th>發布時間</th>
                    <th>編輯/刪除</th>
                </tr>
            </thead>
        </table>

    </div>
    @*@Scripts.Render("~/bundles/jquery")
    @RenderSection("scriptsAdd", required: false)*@

    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


    @section scripts{
        <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
        <script src="/Scripts/moment.js"></script>

        <script>
            var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

            $(document).ready(function () {
                dataTable = $('#Ctable').DataTable({
                    "ajax": {
                        url: '/CommentMains/LoadData',
                        method: 'GET',
                        dataType: 'json',
                    },
                    "columnDefs": [

                        { "targets": 0, "data": "CommentMainID", "width": "60px" },
                        { "targets": 1, "data": "CommentContent1", "width": "60px" },
                        { "targets": 2, "data": "CommentName", "width": "200px" },
                        { "targets": 3, "data": "EmployeeName", "width": "60px" },
                        { "targets": 4, "data": "SendTime", "render": function (data) { return moment(data).format("YYYY-MM-DD HH:mm:ss") }, "width": "100px" },
                        {
                            "targets": 5, "data": "CommentMainID", "render": function (data) {
                                return "<a class='btn btn-warning btn-sm' onclick=PopupForm('/CommentMains/AddOrEdit/" + data + "')><i class='fa fa-pencil'></i> 編輯</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> 刪除</a>"
                            },
                            "orderable": false,
                            "searchable": false,
                            "width": "100px"
                        }

                    ],
                    "language": {

                        "emptyTable": "目前無任何意見調查，請點選 <b>新增調查</b>"
                    }

                });

            });

            function PopupForm(url) {
                var formDiv = $('<div/>');
                $.get(url)
                    .done(function (response) {
                        formDiv.html(response);

                        Popup = formDiv.dialog({
                            autoOpen: true,
                            resizable: false,
                            title: '新增意見調查',
                            height: 700,
                            width: 1000,
                            close: function () {
                                Popup.dialog('destroy').remove();
                            }
                        });
                    });
            }

            function SubmitForm(form) {
                $.validator.unobtrusive.parse(form);
                if ($(form).valid()) {
                    $.ajax({
                        type: "POST",
                        url: form.action,
                        data: $(form).serialize(),
                        success: function (data) {
                            if (data.success) {

                                Popup.dialog("close");
                                dataTable.ajax.reload();

                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "success"
                                })
                            }

                        }
                    });
                }
                return false;

            }

            function Delete(id) {
                if (confirm('確定要刪除此筆意見調查嗎?')) {
                    $.ajax({
                        type: "POST",
                        url: '/CommentMains/Delete/' + id,
                        success: function (data) {
                            if (data.success) {

                                dataTable.ajax.reload();

                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "success"
                                })

                            }
                        }

                    });
                }
            }
        </script>


    }

</body>
</html>