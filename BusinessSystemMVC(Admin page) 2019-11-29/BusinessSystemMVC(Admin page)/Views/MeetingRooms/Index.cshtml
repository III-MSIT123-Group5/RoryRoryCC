@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.MeetingRoom>

@{
    ViewBag.Title = "Index";
}

<style>


    button {
        font-family: 'NotoSansCJKtc-Bold';
    }

    h2 {
        font-family: 'NotoSansCJKtc-Bold';
    }
</style>

<h2>會議室管理</h2>

<br /><br />

<button class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('/MeetingRooms/AddOrEdit2')"><i class="fa fa-plus" aria-hidden="true"></i> 新增會議室</button>
<div style="width:92%">
    <table id="Htable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>會議室ID</th>
                <th>會議室名稱</th>
                <th>容納人數</th>
                <th>辦公室ID</th>
                <th>辦公室位置</th>
                <th>編輯/刪除</th>
            </tr>
        </thead>
    </table>



</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>
    <script>







        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#Htable').DataTable({
                "ajax": {
                    url: '@Url.Action("LoadData", "MeetingRooms")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    { "targets": 0, "data": "meetingID", "width": "75px" },
                    { "targets": 1, "data": "meetingName", "width": "75px"},
                    { "targets": 2, "data": "max_member", "width": "75px"},
                    { "targets": 3, "data": "officeID" },
                    { "targets": 4, "data": "RoomAddress" },
                    {
                        "targets": 5, "data": "meetingID", "render": function (data) {
                            return "<a class='btn btn-warning btn-sm' onclick=PopupForm('/MeetingRooms/AddOrEdit/" + data + "')><i class='fa fa-pencil'></i> 編輯</a><a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> 刪除</a>"
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }


                ],
                "language": {

                    "emptyTable": "目前無會議室，請點選<b>新增會議室</b>"
                }

            });

        });

        function PopupForm(url) {
            console.log(this.id)
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '借車事由',
                        height: 800,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {

                            Popup.dialog("close");
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
            return false;

        }

        function Delete(id) {
            console.log(id)
            if (confirm('確定要刪除此筆貼文嗎?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","MeetingRooms")' ,
                    data:{
                        MeetingID:id
                    },
                    dataType: 'json',
                    success: function (data) {
                        if (data.success) {

                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }

    </script>


}
