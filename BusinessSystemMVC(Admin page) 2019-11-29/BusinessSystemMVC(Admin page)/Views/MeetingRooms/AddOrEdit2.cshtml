@model BusinessSystemMVC_Admin_page_.Models.MeetingRoom
@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit2", "MeetingRooms", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{

    @Html.AntiForgeryToken()
<div>
    @Html.LabelFor(Model => Model.meetingID, "會議室ID", new { @class = "control-label" })
    @Html.EditorFor(Model => Model.meetingID, new { htmlAttributes = new { @class = "form-control", @Value = "", @MaxLength = "8" } })
    @Html.ValidationMessageFor(model => model.meetingID)

    @Html.LabelFor(Model => Model.meetingName, "會議室名稱", new { @class = "control-label" })
    @Html.EditorFor(Model => Model.meetingName, new { htmlAttributes = new { @class = "form-control", @Value = "", @MaxLength = "10" } })
    @Html.ValidationMessageFor(model => model.meetingName)

    @Html.LabelFor(Model => Model.max_member, "容納人數", new { @class = "control-label" })
    @Html.EditorFor(Model => Model.max_member, new { htmlAttributes = new { @class = "form-control", @Value = "", @MaxLength = "8" } })
    @Html.ValidationMessageFor(model => model.max_member)

    @Html.LabelFor(Model => Model.officeID, "辦公室ID", new { @class = "control-label" })
    @Html.EditorFor(Model => Model.officeID, new { htmlAttributes = new { @class = "form-control", @Value = "", @MaxLength = "8" } })
    @Html.ValidationMessageFor(model => model.officeID)

    @Html.LabelFor(Model => Model.RoomAddress, "辦公室位置", new { @class = "control-label" })
    @Html.EditorFor(Model => Model.RoomAddress, new { htmlAttributes = new { @class = "form-control", @Value = "", @MaxLength = "8" } })
    @Html.ValidationMessageFor(model => model.RoomAddress)
</div>

    <div class="form-group" style="float:right;margin-top:20px">
        <div>
            <input type="reset" value="清除" class="btn btn-warning" style="margin-right:10px" />
            <input type="submit" value="確認修改" class="btn btn-success" style="margin-right:10px" />
        </div>
    </div>

}
