@model IEnumerable<BusinessSystemMVC_Admin_page_.Models.Employee>

@{
    ViewBag.Title = "修改人員資料";
}
@section Styles{
    <style>
        button, h2 {
            font-family: 'NotoSansCJKtc-Bold';
        }

        th {
            font-family: 'NotoSansCJKtc-Bold';
        }

        td {
            font-family: '微軟正黑體';
            font-weight: 600;
        }
    </style>
    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
<br />
<h2>@ViewBag.Title</h2>
<br />
<div style="width:97%">
    <table id="EditEmpStable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>員工ID</th>
                <th>員工姓名</th>
                <th>帳號</th>
                <th>部門</th>
                <th>組別</th>
                <th>職稱</th>
                <th>主管姓名</th>
                <th>編輯資料</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="/Scripts/moment.js"></script>

    <script>
        var Popup, dataTable; //height="75%" width="75%" src=\"'height="75%"

        $(document).ready(function () {
            dataTable = $('#EditEmpStable').DataTable({
                "ajax": {
                    url: '@Url.Action("EditLoadData", "Employees")',
                    method: 'GET',
                    dataType: 'json'
                },
                "columnDefs": [
                    { "targets": 0, "data": "employeeID", "width": "60px" },
                    { "targets": 1, "data": "EmployeeName", "width": "60px" },
                    { "targets": 2, "data": "Account", "width": "60px" },
                    { "targets": 3, "data": "name", "width": "60px"  },    /*department*/
                    { "targets": 4, "data": "GroupName", "width": "60px" },
                    { "targets": 5, "data": "position1", "width": "60px"  },
                    { "targets": 6, "data": "ManagerName", "width": "60px" },
                    {
                        "targets": 7, "data": "employeeID", "render": function (data) {
                            return `<a class='btn btn-warning btn-sm' onclick=PopupDetail("@Url.Action("EditLoadDataDetail", "Employees")/${data}")><i class="fa fa-pencil" aria-hidden="true"></i> 編輯資料</a>`
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable": "無待簽核事項。",
                    "processing": "處理中...",
                    "loadingRecords": "載入中...",
                    "lengthMenu": "顯示 _MENU_ 項結果",
                    "zeroRecords": "沒有符合的結果",
                    "info": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                    "infoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                    "infoFiltered": "(從 _MAX_ 項結果中過濾)",
                    "infoPostFix": "",
                    "search": "搜尋:",
                    "paginate": {
                        "first": "第一頁",
                        "previous": "上一頁",
                        "next": "下一頁",
                        "last": "最後一頁"
                    },
                    "aria": {
                        "sortAscending": ": 升冪排列",
                        "sortDescending": ": 降冪排列"
                    }
                }
            });
        });

        //編輯
        function PopupDetail(Url) {
            var formDiv = $('<div/>');
            $.get(Url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: '編輯資料',
                        height: 700,
                        width: 400,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

    </script>

}